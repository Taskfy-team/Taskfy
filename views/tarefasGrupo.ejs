<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/navBar.css">
  <link rel="stylesheet" href="/stylesheets/cardFavoritas.css">
  <link rel="stylesheet" href="/stylesheets/groupsPage.css">
</head>

<body>
  <div class="sidebar">
    <div class="sidebar-header">
      <a href="/grupos"><img src="/images/minilogo.png" alt="Logo" class="sidebar-logo"></a>
    </div>
    <ul class="sidebar-menu">
      <li class="menu-item active">
        <a href="groupsPage.html"><ion-icon name="people-outline"></ion-icon> Grupos</a>
      </li>
      <li class="menu-item">
        <a href="tarefasPage.html"><ion-icon name="document-text-outline"></ion-icon> Tarefas</a>
      </li>
      <li class="menu-item">
        <a href="#Calendario"><ion-icon name="calendar-outline"></ion-icon> Calendário</a>
      </li>
      <li class="menu-item">
        <a href="#Criar"><ion-icon name="add-circle-outline"></ion-icon> Criar</a>
      </li>
    </ul>
    <div class="sidebar-footer">
      <img src="icons/user.svg" alt="Usuário" class="user-icon">
      <p>Configurações</p>
    </div>
  </div>
  <div class="group-container">
      <h2><%= nomeGrupo %></h2>
    <% if (tarefas.length > 0) { %>
      <% tarefas.forEach(tarefa => { %>
        <a href="/tarefa/<%= tarefa.nome_tarefa %>" class="card-link">
          <div class="card">
            <div class="card-header"><%= tarefa.nome_tarefa %></div>
            <div class="card-body">
              <div class="card-title">
                <span><%= new Date(tarefa.prazoTarefa).toLocaleDateString() %></span>
              </div>
              <div class="card-description"><%= tarefa.descricao_tarefa %></div>
              <div class="card-creator">Criador: <%= tarefa.nome_usuario %></div>
            </div>
          </div>
        </a>
      <% }) %>
    <% } else { %>
      <p>Nenhuma tarefa encontrada neste grupo.</p>
    <% } %>
  </div>
</body>
</html>